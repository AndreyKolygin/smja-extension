{
  "manifest_version": 3,
  "name": "Job description Analyzer",
  "version": "2.0",
  "description": "Instant prescoring of job descriptions against your CV via local or cloud LLMs.",
  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },
  "action": { "default_popup": "ui/popup.html", "default_title": "Job description Analyzer" },
  "options_ui": { "page": "ui/options.html", "open_in_tab": true },
  "permissions": ["storage","scripting","activeTab","downloads","tabs"],
  "host_permissions": [],
  "optional_host_permissions": [
    "https://api.openai.com/*",
    "https://*.openai.azure.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://openrouter.ai/*",
    "https://api.perplexity.ai/*",
    "https://api.deepseek.com/*",
    "https://api-inference.huggingface.co/*",
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*",
    "https://api.notion.com/*"
  ],
  
  "background": { "service_worker": "background/index.js", "type": "module" },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "ui/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
